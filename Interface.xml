<GuiXml>
    <Controls>

        <!-- header elements -->

        <Label name="GroupMenu_Interface_Header_ChampionPoints" inherits="ZO_GroupHeader" horizontalAlignment="CENTER" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('Role'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_CP])
                self:SetText(GroupMenu.Strings.ChampionPoints)
            </OnInitialized>
        </Label>

        <Label name="GroupMenu_Interface_Header_Alliance" inherits="ZO_GroupHeader" horizontalAlignment="CENTER" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('ChampionPointsHeader'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_ALLIANCE])
                self:SetText(GroupMenu.Strings.Alliance)
            </OnInitialized>
        </Label>

        <Label name="GroupMenu_Interface_Header_AllianceRank" inherits="ZO_GroupHeader" horizontalAlignment="CENTER" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('Alliance'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_ALLIANCE_RANK])
                self:SetText(GroupMenu.Strings.AllianceRank)
            </OnInitialized>
        </Label>

        <Label name="GroupMenu_Interface_Header_Race" inherits="ZO_GroupHeader" horizontalAlignment="CENTER" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('AllianceRank'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_RACE])
                self:SetText(GroupMenu.Strings.Race)
            </OnInitialized>
        </Label>

        <Label name="GroupMenu_Interface_Header_Gender" inherits="ZO_GroupHeader" horizontalAlignment="CENTER" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('Race'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_GENDER])
                self:SetText(GroupMenu.Strings.Gender)
            </OnInitialized>
        </Label>

        <Label name="GroupMenu_Interface_Header_Social" inherits="ZO_GroupHeader" horizontalAlignment="CENTER" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('Gender'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_SOCIAL])
                self:SetText(GroupMenu.Strings.Social)
            </OnInitialized>
        </Label>

        <!-- row elements -->

        <Label name="GroupMenu_Interface_Row_GenericLabel" inherits="ZO_GroupListRowLabel" horizontalAlignment="CENTER" virtual="true">
            <OnInitialized>
                self.row = self:GetParent()
            </OnInitialized>
            <OnMouseEnter>
                GroupMenu.Interface.Generic_OnMouseEnter(self)
            </OnMouseEnter>
            <OnMouseExit>
                ZO_GroupListRowChild_OnMouseExit(self)
            </OnMouseExit>
        </Label>

        <Label name="GroupMenu_Interface_Row_ChampionPoints" inherits="GroupMenu_Interface_Row_GenericLabel" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('Role'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_CP])
            </OnInitialized>
        </Label>

        <Control name="GroupMenu_Interface_Row_Alliance" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('ChampionPointsLabel'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_ALLIANCE])
            </OnInitialized>
            <Controls>
                <Texture name="$(parent)Texture" mouseEnabled="true" layer="OVERLAY" textureFile="EsoUI/Art/Stats/AllianceBadge_Aldmeri.dds">
                    <Anchor point="CENTER" />
                    <Dimensions x="26" y="26" />
                    <OnInitialized>
                        self.allianceName = ''
                        self.row = self:GetParent():GetParent()
                    </OnInitialized>
                    <OnMouseEnter>
                        GroupMenu.Interface.AllianceIndicator_OnMouseEnter(self)
                    </OnMouseEnter>
                    <OnMouseExit>
                        ZO_GroupListRowChild_OnMouseExit(self)
                    </OnMouseExit>
                </Texture>
            </Controls>
        </Control>

        <Control name="GroupMenu_Interface_Row_AllianceRank" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('Alliance'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_ALLIANCE_RANK])
            </OnInitialized>
            <Controls>
                <Texture name="$(parent)Texture" mouseEnabled="true" layer="OVERLAY" textureFile="EsoUI/Art/Stats/AllianceBadge_Aldmeri.dds">
                    <Anchor point="CENTER" />
                    <Dimensions x="26" y="26"/>
                    <OnInitialized>
                        self.rankName = ''
                        self.row = self:GetParent():GetParent()
                    </OnInitialized>
                    <OnMouseEnter>
                        GroupMenu.Interface.AllianceRankIndicator_OnMouseEnter(self)
                    </OnMouseEnter>
                    <OnMouseExit>
                        ZO_GroupListRowChild_OnMouseExit(self)
                    </OnMouseExit>
                </Texture>
            </Controls>
        </Control>

        <Label name="GroupMenu_Interface_Row_Race" inherits="GroupMenu_Interface_Row_GenericLabel" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('AllianceRank'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_RACE])
            </OnInitialized>
        </Label>

        <Label name="GroupMenu_Interface_Row_Gender" inherits="GroupMenu_Interface_Row_GenericLabel" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('Race'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_GENDER])
            </OnInitialized>
        </Label>

        <Label name="GroupMenu_Interface_Row_Social" inherits="GroupMenu_Interface_Row_GenericLabel" virtual="true">
            <OnInitialized>
                self:SetAnchor(LEFT, self:GetParent():GetNamedChild('Gender'), RIGHT, ZO_KEYBOARD_GROUP_LIST_PADDING_X)
                self:SetWidth(GroupMenu.ConfigData.ColumnWidth[GroupMenu.Constants.COLUMN_INDEX_SOCIAL])
            </OnInitialized>
        </Label>

    </Controls>
</GuiXml>
